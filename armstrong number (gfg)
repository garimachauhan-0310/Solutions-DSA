// User function Template for C++
class Solution {
  public:
    bool armstrongNumber(int n) {
        // code here
        string number = to_string(abs(n));
        int len = number.length();
        int output = 0;
        for (char i : number){
            output = output + (int)pow(i-'0',len);
        }
        return output==n;
    }
};
