class Solution {
public:
    int maxArea(vector<int>& height) {
        int lp=0, rp=height.size()-1, maxWater=0;
        while (lp<rp){
            int width=rp-lp;
            int h=min(height[lp], height[rp]);
            int area=width*h;
            maxWater=max(area, maxWater);
            height[lp]<height[rp] ? lp++ : rp--;
        }
        return maxWater;
    }
};
